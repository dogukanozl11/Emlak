@model CreateProductDto

@{
    ViewData["Title"] = "CreateAdvert";
    Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
                <form method="post">
                    <label>İlan Başlığı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Şehir</label>
                    <input type="text" asp-for="City" class="form-control" />
                    <br />
                    <label>İlçe</label>
                    <input type="text" asp-for="District" class="form-control" />
                    <br />
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.ProductCategory, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                    <br />
                    <label>Fiyat</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <br />
                    <label>Tür</label>
                    <input type="text" asp-for="Type" class="form-control" />
                    <br />
                    <label>Kapak Fotoğrafı</label>
                    <div class="input-group">
                        <input type="text" asp-for="CoverImage" class="form-control" id="coverImageUrl" />
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="button" onclick="document.getElementById('coverImageFile').click();">Göz At</button>
                        </div>
                    </div>
                    <input type="file" id="coverImageFile" style="display:none;" onchange="updateCoverImageUrl(this);" />
                    <br />
                    <label>İlan Açık Adresi</label>
                    <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                    <br />
                    <label>İlan Açıklaması</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <br />
                    <button class="btn btn-primary">İlanı Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function updateCoverImageUrl(input) {
        if (input.files && input.files[0]) {
            const fileName = input.files[0].name;
            document.getElementById('coverImageUrl').value = `/cityimages/${fileName}`;
        }
    }
</script>